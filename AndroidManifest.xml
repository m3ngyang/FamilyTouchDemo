<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.familytouch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.HomePage" >
        </activity>
        <activity android:name=".ui.ServiceCheckBoxPreference" >
        </activity>
        <activity android:name=".ui.WebBrowser" >
        </activity>
        <activity android:name=".ui.NewHomePage" >
        </activity>
        <activity
            android:name=".view.SquareMenu"
            android:theme="@style/SquareMenu" >
        </activity>
        <activity android:name=".ui.GalleryActivity" >
        </activity>
        <activity android:name=".ui.StaticPage" >
        </activity>
        <activity android:name=".ui.LoginPage" >
        </activity>
        <activity
            android:name=".ui.SearchPage"
            android:label="@string/title_activity_search_page" >
        </activity>
        <activity
            android:name=".ui.HomePage2"
            android:label="@string/title_activity_home_page2" >
        </activity>
        <activity
            android:name="com.familytouch.ui.ScreenSaverActivity"
            android:label="@string/title_activity_screen_saver" >
        </activity>
    </application>

</manifest>